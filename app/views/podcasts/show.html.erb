<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @podcast.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @podcast.user_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @podcast.description %>
</p>

<%= link_to 'Edit', edit_podcast_path(@podcast) %> |
<%= link_to 'Back', podcasts_path %>

<%= link_to 'New Episode', new_podcast_episode_path(@podcast) %>

<% @podcast.episodes.group_by(&:pubdate).each do |pubdate, episodes| %>
  <h3><%= pubdate.strftime("%m/%d/%y at %I:%M%p %Z") %></h3>  	
  <% episodes.each do |episode| %>
  	<p><%= episode.title %></p>
  <% end %>
<% end %>
