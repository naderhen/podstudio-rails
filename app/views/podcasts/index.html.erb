<h1>Listing podcasts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>User</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @podcasts.each do |podcast| %>
      <tr>
        <td><img src="<%= podcast.avatar.url(:thumb) %>"></td>
        <td><%= podcast.name %></td>
        <td><%= podcast.user_id %></td>
        <td><%= podcast.description %></td>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

